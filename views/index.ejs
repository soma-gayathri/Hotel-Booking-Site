<% layout('layouts/boilerplate') %>



<div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of listings) { %>
        <div class="col">
            <a href="/listings/<%= listing._id %>" class="d-block text-decoration-none">
            <div class="card mb-4 border-0">
                <img src="<%= listing.image.url %>" class="card-img-top rounded img-fluid object-fit-cover" alt="<%= listing.title %>">
                <div class="card-body card-body-no-padding">
                    <h5 class="card-title"><b><%= listing.title %></b></h5>
                    
                    <p class="card-text"><b>$<%= listing.price.toLocaleString() %></b></p>
                </div>
            </div>
            </a>
        </div>
    <% } %>
</div>